#!/usr/bin/env nsh

export TERM='xterm-256color'

# Highlight the user name when logged in as root.
if [ "${USER}" = "root" ]
then
	userStyle="\{red}"
else
	# userStyle="\{orange}"
    # No orange available
    userStyle="\{red}"
fi

# Highlight the hostname when connected via SSH.
if [ -n "${SSH_TTY}" ]
then
	hostStyle="\{bold}\{red}"
else
	hostStyle="\{yellow}"
fi

export PROMPT="$userStyle\{username}\{reset} at $hostStyle\{hostname}\{reset} in \{green}\{current_dir}\{reset} on \{blue}\{repo_status}\{reset}\nâ†ª "

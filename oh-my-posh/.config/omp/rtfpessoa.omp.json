{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "overflow": "break",
      "segments": [
        {
          "properties": {
            "prefix": "",
            "postfix": ""
          },
          "template": "{{ if .SSHSession }}[ssh] {{ end }}",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "postfix": "",
            "prefix": ""
          },
          "template": "{{ if .SSHSession }}<#d75f00>{{ .UserName }}</> @ <#FFB86C>{{ .HostName }}</> in {{ end }}",
          "foreground": "#ffffff",
          "type": "session",
          "style": "plain",
          "foreground_templates": ["{{if .Root}}#ff5555{{end}}"]
        },
        {
          "properties": {
            "postfix": "",
            "prefix": "",
            "mixed_threshold": 12,
            "style": "mixed",
            "mapped_locations": {
              "~/go/src/github.com/DataDog": " üêï",
              "~/dd": " üêï",
              "~/Downloads": " üíæ",
              "~/dev": " üßë‚Äçüíª"
            }
          },
          "template": "\uf115  {{ .Path }} ",
          "foreground": "#50fa7b",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "postfix": "",
            "prefix": " ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_push_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .UpstreamIcon }} {{ .Ref }}{{if or (gt .Behind 0) (gt .Ahead 0) }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}{{ if .BranchStatus }} |{{ end }} ‚úèÔ∏è{{ .Working.String }}{{ end }}{{ if .Staging.Changed }}{{ if or (.BranchStatus) (.Working.Changed) }} |{{ end }} \uf046{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}{{ if or (or (.BranchStatus) (.Working.Changed)) (.Staging.Changed) }} |{{ end }} üéí{{ .StashCount }}{{ end }}",
          "foreground": "#bd93f9",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "postfix": "",
            "prefix": " ",
            "cache_duration": "none"
          },
          "template": "{{if .Cluster}} üê≥ {{.Cluster}} :: {{.Namespace}} {{end}}",
          "foreground": "#f1fa8c",
          "type": "kubectl",
          "cache": { "duration": "30m", "strategy": "session" },
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "postfix": "",
            "prefix": " ",
            "time_format": "Mon, 02 Jan 2006 15:04:05 MST"
          },
          "template": "<#FFFFFF>\u23f1</>  {{ .CurrentDate | date .Format }}",
          "foreground": "#8be9fd",
          "type": "time",
          "style": "plain"
        },
        {
          "properties": {
            "style": "roundrock",
            "threshold": 500
          },
          "template": " <#fefefe>\ufbab</> {{ .FormattedMs }}",
          "foreground": "#8be9fd",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "postfix": "",
            "prefix": " ",
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "<{{ if eq .Code 0 }}#ffffff{{ else }}#ff5555{{ end }}>{{ if .Root }}#{{ else }}\u21aa{{ end }}</> ",
          "foreground": "#ffffff",
          "type": "exit",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
